# 履歴に重複行を入れない
HISTCONTROL=ignoredups:ignorespace

# プロンプトに色を付ける
PS1='\[\033[01;32m\]\u@\h\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# コマンドの色のサポートを有効にする
alias ls='ls -G'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# ls のエイリアス
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# 英語の man のエイリアス
alias eman='env LANG=C man'
